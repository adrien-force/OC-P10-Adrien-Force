{% extends 'base.html.twig' %}
{% block body %}
    <!DOCTYPE html>
    <html lang="fr">
    <body>
    <div id="main-container">
        {{ include('partials/nav.html.twig') }}
        <main>
            <header>
                {% if app.user %}
                    {{ include('partials/userInitialsBadge.html.twig') }}
                {% endif %}
                <div id="title-page">
                    <div class="flex-header">
                        <h1> {{ project.name }}</h1>
                        <div class="user-list">
                            {% for user in project.users %}
                            <div class="avatar"> {{ user.initials }}</div>
                            {% endfor %}
                        </div>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a class="button" href=" {{ path('app_project_edit', {id: project.id}) }}">Modifier</a>
                        {% endif %}
                    </div>
                </div>
            </header>
            <div id="content">
                <div id="tasks-container">
                    {% for stati in status %}
                        <div class="task-column">
                            <h2>{{ stati.name }}</h2>
                            <div class="tasks-list">
                                {% for task in project.tasks %}
                                    {% if task.status.id == stati.id %}
                                    <a class="task" href="{{ path('app_project_task_edit', {id: task.id}) }}">
                                        <h3>{{ task.title }}</h3>
                                        <p>{{ task.description }}</p>
                                        <div class="task-infos">
                                            {% if task.deadline %}
                                            <div class="task-deadline">
                                                <i class="fa-regular fa-calendar"></i> {{ task.deadline|date('d/m/Y') }}
                                            </div>
                                            {% endif %}
                                            {% if task.user %}
                                            <div class="mini-user">
                                                {{ task.user.initials}}
                                            </div>
                                            {% else %}
                                            <i class="fa fa-xmark"></i>
                                            {% endif %}
                                        </div>
                                    </a>
                                    {% endif %}
                                {% endfor %}
                                {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_project_task_add', {id: project.id}) }}" class="task-add">
                                    + Ajouter une t√¢che
                                </a>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </main>
    </div>
    </body>
    </html>
{% endblock %}

{% extends 'base.html.twig' %}
{% block body %}
    <!DOCTYPE html>
    <html lang="fr">
    <body>
    <div id="main-container">
        {{ include('partials/nav.html.twig') }}
        <main>
            <header>
                {% if app.user %}
                    {{ include('partials/userInitialsBadge.html.twig') }}
                {% endif %}
                <div id="title-page">
                    <h1>
                        Modifier le profil d'un collaborateur
                    </h1>
                </div>
            </header>
            <div id="content">
                {{ form_start(form) }}
                <form name="user" method="post">
                    <div>
                        {{ form_label(form.lastname, 'Nom') }}
                        {{ form_widget(form.lastname) }}
                        <div class="form-error-message">
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>
                    <div>
                        {{ form_label(form.firstname, 'Prénom') }}
                        {{ form_widget(form.firstname) }}
                        <div class="form-error-message">
                            {{ form_errors(form.firstname) }}
                        </div>
                    </div>
                    <div>
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email) }}
                        <div class="form-error-message">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div>
                        {{ form_label(form.active, 'Actif') }}
                        {{ form_widget(form.active) }}
                        <div class="form-error-message">
                            {{ form_errors(form.active) }}
                        </div>
                    </div>
                    <div>
                        {{ form_label(form.roles, 'Rôle') }}
                        {{ form_widget(form.roles) }}
                        <div class="form-error-message">
                            {{ form_errors(form.roles) }}
                        </div>
                    </div>
                    <div class="form-flex">
                        <div>
                            {{ form_label(form.arrivalAt, 'Date d\'arrivée') }}
                            {{ form_widget(form.arrivalAt) }}
                            <div class="form-error-message">
                                {{ form_errors(form.arrivalAt) }}
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.contractType, 'Type de contrat') }}
                            {{ form_widget(form.contractType) }}
                            <div class="form-error-message">
                                {{ form_errors(form.contractType) }}
                            </div>
                        </div>
                    </div>
                    <div>
                        {{ form_label(form.useTwoFactorAuth, 'Double authentification par email') }}
                        {{ form_widget(form.useTwoFactorAuth) }}
                        <div class="form-error-message">
                            {{ form_errors(form.useTwoFactorAuth) }}
                        </div>
                    </div>
                    <button class="button button-submit">Enregistrer</button>
                </form>
                {{ form_end(form) }}
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </main>
    </div>
    </body>
    </html>
{% endblock %}

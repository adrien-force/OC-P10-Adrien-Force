{% extends 'index/loggingBase.html.twig' %}

{% block loggingcard %}

<h1 style="padding-bottom: 30px"> Se connecter </h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}



    <form action="{{ path('app_signIn') }}" method="post">

        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" required>


        <br>
    <br>
    <button class="button button-submit" style="width: 100%">Continuer</button>
</form>
    <h4 style="padding-bottom: 40px"> Pas de compte ? <a href="{{ path('app_signUp') }}">S'inscrire</a></h4>
{% endblock %}

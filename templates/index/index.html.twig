{% extends 'index/loggingBase.html.twig' %}

{% block title %}
    <title> {{ 'index.welcome.title'|trans }} </title>
{% endblock %}

{% block loggingcard %}
    <div class="logging-card language-switcher">
        <div class="language-switcher-content">
            <i class="fas fa-globe" style="color: #D9D9D9"></i>
            <a href="{{ path('switch_language', {'locale': 'fr'}) }}">FR</a>
            <a href="{{ path('switch_language', {'locale': 'en'}) }}">EN</a>
        </div>
    </div>

    <h1>{{ 'index.welcome.title'|trans }}</h1>
    <h2>{{ 'index.welcome.start_now'|trans }}</h2>
    <h3>{{ 'index.welcome.login'|trans }}</h3>

    <button class="button-submit button" onclick="window.location.href='/signIn'">{{ 'index.signIn'|trans }}</button>
    <div class="line-separator">
        <div class="hline"></div>
        <h3>{{ 'index.or'|trans }}</h3>
        <div class="hline"></div>
    </div>
    <button class="button" onclick="window.location.href='/signUp'">{{ 'index.signUp'|trans }}</button>
{% endblock %}